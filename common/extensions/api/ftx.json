[
  {
    "namespace": "ftx",
    "description": "Use the <code>chrome.ftx</code> to interact with FTX services.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/ftx_api.h"
    },
    "events": [
    ],
    "functions": [
      {
        "name": "getFuturesData",
        "type": "function",
        "description": "Gets volume, price and change for perpetual futures",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": { "type": "any" }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getChartData",
        "type": "function",
        "description": "Gets chart data for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "symbol"
          },
          {
            "type": "string",
            "name": "start"
          },
          {
            "type": "string",
            "name": "end"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": { "type": "any" }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "setOauthHost",
        "type": "function",
        "description": "Sets the FTX host the user will be authenticating to",
        "parameters": [
          {
            "type": "string",
            "name": "host"
          }
        ]
      },
      {
        "name": "getOauthHost",
        "type": "function",
        "description": "Gets the current FTX host",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "host",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "getClientUrl",
        "type": "function",
        "description": "Fetches the Oauth Url for FTX",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "clientUrl",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccessToken",
        "type": "function",
        "description": "Facilitates access token creation given a temporary code",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "success",
                "type": "boolean",
                "description": "Indicates the access token was retrieved successfully"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccountBalances",
        "type": "function",
        "description": "Retrieves user asset balances",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "balances",
                "type": "any"
              }, {
                "name": "authInvalid",
                "type": "boolean",
                "description": "Indicates whether the auth token has expired"
              }
            ]
          }
        ]
      },
      {
        "name": "isSupported",
        "type": "function",
        "description": "Fetches whether ftx is supported",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supported",
                "type": "boolean"
              }
            ]
          }
        ]
      }
    ],
    "types": [
    ],
    "properties": {
    }
  }
]
